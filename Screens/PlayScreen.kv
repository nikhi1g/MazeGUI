<PlayScreen>:
    on_enter: root.enter()

    timer_button: timer_button

    name: 'play'
    FloatLayout:
        size_hint: None, None

    DPEAButton:
        id: timer_button
        text: ''
        size: 1000, 1000
        center_x: root.width * 0.5
        center_y: root.height * 0.5
        color: 0.1, 0.1, 0.1, 1
        on_press: root.transition()
